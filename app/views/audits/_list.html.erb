<div class="box-body">
  <table class="table table-bordered">
    <tr>
      <th>审批对象</th>
      <th>对象类型</th>
      <th>起始状态</th>
      <th>变更后状态</th>
      <th>审批时间</th>
    </tr>
    <% if @audits.present? %>
      <% @audits.each do |audit| %>
        <tr>
          <td><%= audit.model_show_name %></td>
          <td><%= audit.get_model_type %></td>
          <td><%= audit.model_type.constantize::STATUS[audit.from_status.to_sym] %></td>
          <td><%= audit.model_type.constantize::STATUS[audit.to_status.to_sym] %></td>
          <td><%= simple_time audit.created_at %></td>
        </tr>
        <tr></tr>
      <% end %>
    <% else %>
      <tr>
        <td colspan="5" align="center">没有审批记录</td>
      </tr>
    <% end %>

  </table>
</div>
<!-- /.box-body -->
<div class="box-footer clearfix">
  <div class="pull-right pagination-sm no-margin">
    <%= paginate @audits%>
  </div>
</div>