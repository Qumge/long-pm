<%= render 'manage_invoices/header' %>
<style>
  .btn {
    padding: 0;
  }
</style>
<div class="row">
  <div class="col-md-12">
    <div class="box">
      <div class="box-header with-border">
        <h3 class="box-title">开票列表</h3>

      </div>
      <div class="box-tools">
        <%= form_tag manage_invoices_path, method: :get do %>
          <div class="input-group input-group-sm">
            <div class="pull-right">
              <div class="col-xs-6"><%= select_tag :invoice_status, options_for_select(Invoice::STATUS.collect {|status| [status[1], status[0]]}, params[:invoice_status]), include_blank: '全部', class: 'form-control' %></div>

              <div class="col-xs-6">
                <input type="text" name="table_search" class="form-control" placeholder="检索" value="<%= params[:table_search] %>">
              </div>
            </div>

            <div class="input-group-btn">
              <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
            </div>
          </div>
        <% end %>
      </div>
      <!-- /.box-header -->
      <div id="records">
        <%= render 'manage_invoices/invoices' %>
      </div>
    </div>
    <!-- /.box -->
  </div>
</div>

