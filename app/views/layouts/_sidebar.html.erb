<!-- Left side column. contains the logo and sidebar -->
<aside class="main-sidebar">
  <!-- sidebar: style can be found in sidebar.less -->
  <section class="sidebar">
    <!-- Sidebar user panel -->
    <div class="user-panel">
      <div class="pull-left image">
        <img src="/assets/dist/user2-160x160.jpg" class="img-circle" alt="User Image">
      </div>
      <div class="pull-left info">
        <p><%= current_user.name %></p>
        <a href="javascript:void(0);"><%= current_user.role&.name %></a>
      </div>
    </div>
    <!-- search form -->
    <!-- /.search form -->
    <!-- sidebar menu: : style can be found in sidebar.less -->
    <ul class="sidebar-menu" data-widget="tree">
      <li class="header">控制台</li>
      <li class="<%= active_class params, 'projects' %>">
        <%= link_to projects_path do %>
          <i class="fa fa-dashboard"></i> <span>项目</span>
        <% end %>
      </li>

      <li class="<%= active_class params, 'audits' %>">
        <%= link_to audits_path do %>
          <i class="fa fa-pencil"></i> <span>审批流程</span>
          <span class="pull-right-container">
            </span>
        <% end %>
      </li>

      <li class="<%= active_class params, 'manage_orders' %>">
        <%= link_to manage_orders_path do %>
          <i class="fa fa-shopping-cart"></i> <span>订单管理</span>
          <span class="pull-right-container">
              <small class="label pull-right bg-red"></small>
            </span>
        <% end %>
      </li>

      <li class="<%= active_class params, 'agents' %>">
        <%= link_to agents_path do %>
          <i class="fa fa-users"></i> <span>代理商</span>
        <% end %>
      </li>

      <li class="<%= active_class params, 'contracts' %>">
        <%= link_to contracts_path do %>
          <i class="fa fa-file-text-o"></i> <span>战略合同</span>
        <% end %>
      </li>

      <li class="<%= active_class params, 'products' %>">
        <%= link_to products_path do %>
          <i class="fa fa-leaf"></i> <span>产品管理</span>
        <% end %>
      </li>


      <li class="treeview">
        <a href="#">
          <i class="fa fa-money"></i>
          <span>费用</span>
          <span class="pull-right-container">
              <i class="fa fa-angle-left pull-right"></i>
            </span>
        </a>
        <ul class="treeview-menu">
          <li>
            <%= link_to '/' do %>
              <i class="fa fa-list"></i> <span>所有费用</span>
            <% end %>
          </li>
          <li>
            <%= link_to '/' do %>
              <i class="fa fa-plus"></i> <span>录入费用</span>
            <% end %>
          </li>
        </ul>
      </li>

      <li class="treeview">
        <a href="#">
          <i class="fa fa-file-pdf-o"></i>
          <span>资料</span>
          <span class="pull-right-container">
              <i class="fa fa-angle-left pull-right"></i>
            </span>
        </a>
        <ul class="treeview-menu">
          <li>
            <%= link_to '/' do %>
              <i class="fa fa-list"></i> <span>资料查阅</span>
            <% end %>
          </li>
          <li>
            <%= link_to '/' do %>
              <i class="fa fa-plus"></i> <span>上传资料</span>
            <% end %>
          </li>
        </ul>
      </li>

      <li class="treeview">
        <a href="#">
          <i class="fa fa-bomb"></i>
          <span>竞品信息</span>
          <span class="pull-right-container">
              <i class="fa fa-angle-left pull-right"></i>
            </span>
        </a>
        <ul class="treeview-menu">
          <li>
            <%= link_to '/' do %>
              <i class="fa fa-list"></i> <span>信息查询</span>
            <% end %>
          </li>
          <li>
            <%= link_to '/' do %>
              <i class="fa fa-plus"></i> <span>信息上传</span>
            <% end %>
          </li>
        </ul>
      </li>


      <li>
        <%= link_to rails_admin_path do %>
          <i class="fa fa-gear"></i> <span>后台管理</span>
        <% end %>
      </li>
    </ul>
  </section>
  <!-- /.sidebar -->
</aside>