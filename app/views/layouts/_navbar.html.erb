<header class="main-header">
  <!-- Logo -->
  <a href="#" class="logo">
    <!-- mini logo for sidebar mini 50x50 pixels -->
    <span class="logo-mini"><i><%= image_tag 'logo_white.png', style: 'width:48px; height: 48px;margin-bottom:5px;' %><b>龙胜</b>大客户</i></span>
    <!-- logo for regular state and mobile devices -->
    <span class="logo-lg"><%= image_tag 'logo_white.png', style: 'width:45px; height: 45px;margin-bottom:5px;' %><b>龙胜</b>大客户<i></i></span>
  </a>
  <!-- Header Navbar: style can be found in header.less -->
  <nav class="navbar navbar-static-top">
    <!-- Sidebar toggle button-->
    <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
      <span class="sr-only">Toggle navigation</span>
    </a>

    <div class="navbar-custom-menu">
      <ul class="nav navbar-nav">

        <!-- Notifications: style can be found in dropdown.less -->
        <li class="notifications-menu">
<!--          <a href="#" class="dropdown-toggle" data-toggle="dropdown">-->
          <%= link_to notices_path do %>
            <i class="fa fa-bell-o"></i>
            <% if @active_notices.present? %>
            <span class="label label-warning"><%= @active_notices.size%></span>
            <% end %>
          <% end %>
        </li>

        <li class="dropdown">
            <%= link_to "注销", destroy_user_session_path(:authenticity_token => form_authenticity_token()), method: :delete, class: "dropdown-toggle" %>
        </li>

        <!-- Control Sidebar Toggle Button -->
<!--        <li>-->
<!--          <a href="#" data-toggle="control-sidebar"><i class="fa fa-gears"></i></a>-->
<!--        </li>-->
      </ul>
    </div>
  </nav>
</header>