<%= render 'agents/header' %>

<div class="row">
  <div class="col-md-10">
    <div class="box">
      <div class="box-header with-border">
        <h3 class="box-title">代理商列表
            <small><%= link_to '申请', new_agent_path , class: 'font-a label bg-green' %></small>
        </h3>
      </div>
      <!-- /.box-header -->
      <div class="box-tools">
        <%= form_tag agents_path, method: :get do%>
          <div class="input-group input-group-sm">
            <div class="pull-right">
              <div class="col-xs-6"><%= select_tag :agent_status, options_for_select(Agent::STATUS.collect{|status| [status[1], status[0]]}, params[:agent_status]),include_blank: '全部', class: 'form-control' %></div>

              <div class="col-xs-6"><input type="text" name="table_search" class="form-control" placeholder="检索" value="<%= params[:table_search] %>"></div>
            </div>

            <div class="input-group-btn">
              <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
            </div>
          </div>
        <% end %>
      </div>
      <div id="records">
        <%= render 'agents/list' %>
      </div>
    </div>
    <!-- /.box -->
  </div>
</div>

