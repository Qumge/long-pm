<div class="box-body">
  <table class="table table-bordered">
    <tr>
      <th>时间</th>
      <th>人员</th>
      <% if params[:cost_category_id].present? %>
        <th>费用类型</th>
        <%end %>
      <th>费用</th>
    </tr>
    <% if @costs_array.present? %>
      <% @costs_array.each do |data| %>
            <tr>
              <td><%= data[0] %></td>
              <td><%= data[1]&.name %></td>
              <% if params[:cost_category_id].present? %>
                <td><%= CostCategory.find_by(id: params[:cost_category_id])&.name %></td>
              <%end %>
              <td><%= data[2] %></td>
            </tr>
      <% end %>
    <% else %>
      <tr>
        <td colspan="3" align="center">没有可显示的内容</td>
      </tr>
    <% end %>

  </table>
</div>
<div class="box-footer clearfix">
  <div class="pull-right pagination-sm no-margin">
    <%= paginate @costs_array, remote: true, params: params%>
  </div>

</div>