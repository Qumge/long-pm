<%= render 'projects/header' %>
<div class="row">
  <div class="box">
    <div class="box-body">
      <% if @project.report.present? %>
        <%= render partial: '/reports/detail', locals: {report: @project.report}%>
      <% else %>
        还未进行项目报备，现在进行<%= link_to '【报备】', new_report_path,'data-toggle' => "modal", 'data-target' => "#global-modal"  %>
      <% end %>
    </div>
    <div class="box-footer">
      <div class="pull-right no-margin">
        <%= link_to '修改', edit_report_path(@project),'data-toggle' => "modal", 'data-target' => "#global-modal", class: 'btn btn-success'  %> <%= link_to '返回', project_path(@project), class: 'btn btn-primary', style: 'margin-left:20px;' %>
      </div>
    </div>
  </div>
</div>
