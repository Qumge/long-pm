<style>
  .table > tbody > tr > td{
    padding: 2px;
  }
</style>
  <i class="fa fa-shopping-cart bg-orange"></i>

  <div class="timeline-item">
    <div class="timeline-body">
      <div class="box box-default collapsed-box" style="margin-bottom: 5px;">
        <div class="box-header with-border">
          <h4 class="box-title"> <%= link_to new_invoice_path(@project), 'data-toggle' => "modal", 'data-target' => "#global-modal", class: 'btn' do %>
              开票申请
            <% end %>

          </h4>

          <div class="box-tools pull-right">
<!--            <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-plus"></i>-->
<!--            </button>-->
          </div>
          <!-- /.box-tools -->
        </div>
        <!-- /.box-header -->

        <div class="box-body" style="display: none;border: solid 1px #d2d6de;" >


        </div>

      </div>
  <% @project.invoices.each do |invoice| %>
      <div class="box box-default collapsed-box" style="margin-bottom: 5px;">
        <div class="box-header with-border">
          <h4 class="box-title">票号<%= invoice.invoice_no %><%= link_to edit_invoice_path(@project, invoice_id: invoice.id), 'data-toggle' => "modal", 'data-target' => "#global-modal", class: 'btn' do %>
              编辑
            <% end %>

          </h4>

          <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-plus"></i>
            </button>
          </div>
          <!-- /.box-tools -->
        </div>
        <!-- /.box-header -->
          <div class="box-body" style="display: none;border: solid 1px #d2d6de; word-wrap:break-word; overflow-x: scroll">
            <% invoice.orders.each do |order| %>
              <table class="table table-striped" style="border: solid 1px #d2d6de;">
                <thead>
                <h4><%= order.no %></h4>
                </thead>
                <tbody>
                <tr>
                  <th>产品名</th>
                  <th>编号</th>
                  <th>价格</th>
                  <th>数量</th>
                  <th>总价</th>
                </tr>
                <% order.order_products.each do |order_product| %>
                  <tr>
                    <td> <%= order_product.product&.name %></td>
                    <td> <%= order_product.product&.no %></td>
                    <td> <%= order_product.real_price %></td>
                    <td> <%= order_product.number %></td>
                    <td> <%= order_product.real_total_price %></td>
                  </tr>
                <% end %>
                <tr>
                  <td colspan="4">合计</td>
                  <td><%= order.real_total_price %></td>
                </tr>
                </tbody>
              </table>

          <% end %>

          </div>

        <!-- /.box-body -->
      </div>



  <% end %>
    </div>
  </div>