<style>
  .table > tbody > tr > td{
    padding: 2px;
  }
</style>
  <i class="fa fa-shopping-cart bg-orange"></i>

  <div class="timeline-item">
    <div class="timeline-body">
      <div class="box box-default collapsed-box" style="margin-bottom: 5px;">
        <div class="box-header with-border">
          <h4 class="box-title">
            <%= link_to '添加新订单', new_order_path(@project), 'data-toggle' => "modal", 'data-target' => "#global-modal", class: 'btn' if @project.can_do? :order %>
          </h4>

          <div class="box-tools pull-right">
<!--            <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-plus"></i>-->
<!--            </button>-->
          </div>
          <!-- /.box-tools -->
        </div>
        <!-- /.box-header -->

        <div class="box-body" style="display: none;border: solid 1px #d2d6de;" >


        </div>

      </div>
  <% @project.orders.each do |order| %>
      <div class="box box-default collapsed-box" style="margin-bottom: 5px;">
        <div class="box-header with-border">
          <h4 class="box-title">订单<%= order.no %>
            <%= link_to '添加商品', new_order_path(@project, order_id: order.id), 'data-toggle' => "modal", 'data-target' => "#global-modal", class: 'btn' if order.can_edit? %>
          </h4>

          <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-plus"></i>
            </button>
          </div>
          <!-- /.box-tools -->
        </div>
        <!-- /.box-header -->

          <div class="box-body" style="display: none;border: solid 1px #d2d6de; word-wrap:break-word; overflow-x: scroll">
            <table class="table table-striped">
              <tbody>
              <tr>
                <th>产品名</th>
                <th>编号</th>
                <th>价格</th>
                <th>数量</th>
                <th>总价</th>
                <th></th>
              </tr>
              <% order.order_products.each do |order_product| %>
                <tr>
                  <td> <%= order_product.product&.name %></td>
                  <td> <%= order_product.product&.no %></td>
                  <td> <%= order_product.real_price %></td>
                  <td> <%= order_product.number %></td>
                  <td> <%= order_product.real_total_price %></td>
                  <td>
                    <% if order.can_edit? %>
                    <%= link_to edit_order_path(order_product), 'data-toggle' => "modal", 'data-target' => "#global-modal", class: 'btn' do %>
                      编辑
                    <% end %>
                    <%= link_to order_path(order_product), method: :delete, data: {confirm: '确认删除吗？'}, class: 'btn', style: 'color: red;' do %>
                      删除
                    <% end %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
              <tr>
                <td colspan="4">合计</td>
                <td><%= order.real_total_price %></td>
                <td><%= link_to '下单', 'JavaScript:void(0)', onclick: "place_order(#{order.id})",class: 'btn btn-success btn-sm' if order.can_edit? %>
                </td>
              </tr>
              </tbody>
            </table>

          </div>

        <!-- /.box-body -->
      </div>
  <% end %>
      <div style="text-align: right">
        <%= link_to '下一步', 'JavaScript:void(0)', onclick: "step_event('done_order')",class: 'btn  btn-success btn-sm' if @project.can_do? :order %>
      </div>
    </div>
  </div>