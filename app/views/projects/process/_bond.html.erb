<li class="time-label">
                  <span class="bg-purple">
                    保证金请款
                  </span>
</li>
<!-- /.timeline-label -->
<!-- timeline item -->
<li>
  <i class="fa fa-file-pdf-o bg-green"></i>

  <div class="timeline-item">
    <div class="form-group">

    </div>
    <div class="timeline-body">
      <label for="exampleInputFile">尾款请款资料</label>
      <div >
        <% if can? :upload, :projects %>
        <% if @project.can_do? :bond %>
        <a class="btn btn-xs bg-blue" id="bond" href="#" >
          <i class="fa fa-plus"></i>
          <span>选择文件</span>
        </a>
          <% end %>
         <% end %>
      </div>

      <% if @project.bond.present? %>
        <a href="javascript:void(0)" onclick="show_file(this)" class="btn show-file" data-url="<%= @project.bond.preview_url%>" data-file-name="<%= @project.bond.file_name %>">
          <i class="fa fa-eye"></i><%= @project.bond.file_name %>
        </a>
        <% if can? :delete_attachment, :projects %>
        <%= link_to '删除', 'JavaScript:void(0)', onclick: "delete_attachment(#{@project.bond.id}, '#{delete_attachment_project_path @project.id}')",class: 'btn  btn-sm ', style: 'color: red' if @project.can_do? :bond %>
        <% end %>
        <% if can? :step_event, :projects %>
        <div style="text-align: right">
          <%= link_to '下一步', 'JavaScript:void(0)', onclick: "step_event('done_bond')",class: 'btn  btn-success btn-sm' if @project.can_do? :bond %>
        </div>
        <% end %>
      <% end %>
    </div>
  </div>
</li>