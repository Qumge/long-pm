<li class="time-label">
                  <span class="bg-purple">
                    项目合同
                  </span>
</li>
<!-- /.timeline-label -->
<!-- timeline item -->

<li>
  <i class="fa fa-file-pdf-o bg-green"></i>

  <div class="timeline-item">
    <div class="form-group">

    </div>
    <div class="timeline-body">
      <label for="exampleInputFile">项目合同文件</label>
      <div >
        <% if can? :upload, :projects %>
        <% if @project.can_do? :contract %>
        <a class="btn btn-xs bg-blue" id="project_contract" href="#" >
          <i class="fa fa-plus"></i>
          <span>选择文件</span>
        </a>
        <%end %>
        <%end %>
      </div>

      <% if @project.project_contract.present? %>
      <a href="javascript:void(0)" onclick="show_file(this)" class="btn show-file" data-url="<%= @project.project_contract.preview_url%>" data-file-name="<%= @project.project_contract.file_name %>">
        <i class="fa fa-eye"></i><%= show_file_name '项目合同',  @project.project_contract %>
      </a>
        <% if can? :delete_attachment, :projects %>
        <%= link_to '删除', 'JavaScript:void(0)', onclick: "delete_attachment(#{@project.project_contract.id}, '#{delete_attachment_project_path @project.id}')",class: 'btn  btn-sm ', style: 'color: red' if @project.can_do? :contract %>
        <%end %>
        <% if can? :step_event, :projects %>
        <div style="text-align: right">
          <%= link_to '下一步', 'JavaScript:void(0)', onclick: "step_event('done_contract')",class: 'btn  btn-success btn-sm' if @project.can_do_next? :contract %>
        </div>
        <%end %>
      <% end %>

    </div>
  </div>
</li>

