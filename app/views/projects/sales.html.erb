<%= render 'projects/header' %>
<div class="row" id="sale-list">
  <div class="col-md-10">
    <div class="box">
      <div class="box-header with-border">
        <h3 class="box-title">合同价格体系</h3>
      </div>
      <!-- /.box-header -->
      <div class="box-body">
        <table class="table table-bordered">
          <tr>
            <th>产品代码</th>
            <th>产品型号</th>
            <th>产品名</th>
            <th>单位</th>
            <th>合同价</th>
          </tr>
          <tr>
            <% if @sales.present? %>
              <% @sales.each do |sale| %>
              <tr>
                <td><%= link_to sale.product&.no, product_path(sale.product), 'data-toggle' => "modal", 'data-target' => "#global-modal" %></td>
                <td><%= sale.product&.product_no %></td>
                <td><%= sale.product&.name %></td>
                <td><%= sale.product&.unit %></td>
                <td><%= sale.price %></td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="4" align="center">没有可显示的内容</td>
            </tr>
          <% end %>
          </tr>

        </table>
      </div>
      <!-- /.box-body -->
      <div class="box-footer clearfix">
        <div class="pull-right pagination-sm no-margin">
          <%#= paginate @products%>
        </div>
      </div>
    </div>
    <!-- /.box -->
  </div>
</div>