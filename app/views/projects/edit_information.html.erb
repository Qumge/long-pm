<div id="form">
  <div class="modal-header" style="padding:5px; padding-left: 15px;">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="file-modal-label">完善项目资料</h4>
  </div>
  <%= simple_form_for(@project, url: update_information_project_path(@project), html: {class: 'form-horizontal group_form', onkeydown: "if(event.keyCode==13)return false;"}, wrapper: :horizontal_form) do |f| %>
    <div class="modal-body" >
      <%= f.input :purchase, label: '采购'%>
      <%= f.input :purchase_phone, label: '采购号码'%>
      <%= f.input :design, label: '设计'%>
      <%= f.input :design_phone, label: '设计电话'%>
      <%= f.input :cost, label: '成本负责人'%>
      <%= f.input :cost_phone, label: '成本负责人电话'%>
      <%= f.input :settling, label: '结算负责人'%>
      <%= f.input :settling_phone, label: '结算负责人电话'%>
      <%= f.input :constructor, label: '施工方'%>
      <%= f.input :constructor_phone, label: '施工方电话'%>
      <%= f.input :supervisor, label: '监理'%>
      <%= f.input :supervisor_phone, label: '监理电话'%>
    </div>
  <% end %>

  <div class="modal-footer">
    <%= button_tag '保存', class: 'btn btn-primary commit', data: { disable_with: '保存中' } %>
    <button type="button" class="btn btn-default" data-dismiss="modal">返回</button>
  </div>
</div>

<script tye="text/javascript">
    //ajax提交表单
    $(function(){
        $('.commit').click(function(){
            console.log(111);
            $.ajax({
                type: "POST",
                url: $('.group_form').attr('action'),
                data: $('.group_form').serialize(),
                dataType: 'script',
                async: false,
                error: function(request) {
                    alert("Connection error");
                },
                success: function(data) {
                    //接收后台返回的结果
                }
            });

        })
        $('.select2').select2();

    });
</script>
