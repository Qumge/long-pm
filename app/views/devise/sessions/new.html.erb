<div class="login-box-body">
  <p class="login-box-msg">登录</p>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group has-feedback">
      <%= f.text_field :login, autofocus: true, autocomplete: "login", class: 'form-control', placeholder: "账号" %>
      <span class="glyphicon glyphicon-user form-control-feedback"></span>
    </div>
    <div class="form-group has-feedback">
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "密码"%>
      <span class="glyphicon glyphicon-lock form-control-feedback"></span>
    </div>
    <div class="row">
      <div class="col-xs-8">

      </div>
      <!-- /.col -->
      <div class="col-xs-4">
        <%= f.submit "登录", class: "btn btn-primary btn-block btn-flat" %>
      </div>
      <!-- /.col -->
    </div>

<% end %>
</div>

